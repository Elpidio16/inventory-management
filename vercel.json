{
  "framework": "flask",
  "buildCommand": "pip install -r requirements.txt",
  "functions": {
    "api/index.py": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "env": {
    "FLASK_ENV": "production",
    "DATABASE_URL": "sqlite:///inventory.db"
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ]
}

